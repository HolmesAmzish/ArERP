@model IEnumerable<ArERP.Models.Entity.Employee>

<h2>员工列表</h2>

@* <p><a asp-action="Create">添加新员工</a></p> *@

<table class="table">
    <thead>
        <tr>
            <th>姓名</th>
            <th>性别</th>
            <th>出生日期</th>
            <th>邮箱</th>
            <th>电话</th>
            <th>部门</th>
            <th>职位</th>
            <th>是否在职</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@(item.Gender == "M" ? "男" :"女")</td>
                <td>@item.BirthDate</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@item.Phone</td>
                <td>@item.Department.DepartmentName</td>
                <td>@item.Position</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">详情</a>
                </td>
            </tr>
        }
    </tbody>
</table>