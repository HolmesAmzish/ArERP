@model ArERP.Dtos.RegisterRequest
@{
ViewBag.Title = "注册";
}

<div class="max-w-md mx-auto mt-10 bg-white p-8 shadow-lg rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-center">注册</h2>

    <form asp-action="Register" method="post" class="space-y-5">
        <div>
            <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">用户名</label>
            <input asp-for="Username" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">密码</label>
            <input asp-for="Password" type="password" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">邮箱</label>
            <input asp-for="Email" type="email" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        
        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
            注册
        </button>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
