@model ArERP.Models.Entity.EmployeeApplication

@{
    ViewData["Title"] = "入职申请审批";
}

<h2 class="mb-4">入职申请审批</h2>

<div class="row">
    <!-- 左侧：申请人信息 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>申请人信息</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">姓名</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">性别</dt>
                <dd class="col-sm-8">@(Model.Gender == "M" ? "男" : "女")</dd>

                <dt class="col-sm-4">出生日期</dt>
                <dd class="col-sm-8">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">身份证号</dt>
                <dd class="col-sm-8">@Model.NationalId</dd>

                <dt class="col-sm-4">手机号</dt>
                <dd class="col-sm-8">@Model.Phone</dd>

                <dt class="col-sm-4">邮箱</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">部门</dt>
                <dd class="col-sm-8">@Model.DepartmentId</dd> <!-- 如有部门名称可替换 -->

                <dt class="col-sm-4">申请时间</dt>
                <dd class="col-sm-8">@Model.ApplicationDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
    </div>

    <!-- 右侧：审批操作 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>审批操作</h4>
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Deleted" />

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">审批状态</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Pending">待处理</option>
                        <option value="Approved">批准</option>
                        <option value="Rejected">拒绝</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Approver" class="form-label">审批人</label>
                    <input asp-for="Approver" class="form-control" />
                    <span asp-validation-for="Approver" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ApprovalNote" class="form-label">审批意见</label>
                    <textarea asp-for="ApprovalNote" class="form-control"></textarea>
                    <span asp-validation-for="ApprovalNote" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary me-2">提交审批</button>
                    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
