@using ArERP.Helper
@model IEnumerable<ArERP.Models.Entity.EmployeeApplication>

@{
    ViewBag.Title = "员工入职申请列表";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
    <tr>
        <th>姓名</th>
        <th>性别</th>
        <th>申请部门</th>
        <th>状态</th>
        <th>申请时间</th>
        <th>审批人</th>
        <th>审批时间</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var app in Model)
    {
        <tr>
            <td>@app.Name</td>
            <td>@(app.Gender == "M" ? "男" : "女")</td>
            <td>@app.DepartmentId</td>
            <td>@app.Status.GetDisplayName()</td>
            <td>@app.ApplicationDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            <td>@app.Approver</td>
            <td>@app.ApprovalDate?.ToString("yyyy-MM-dd HH:mm")</td>
            <td>
                <a asp-action="Details" asp-route-id="@app.Id">查看</a>
                |
                <a asp-action="Edit" asp-route-id="@app.Id">编辑</a>
            </td>
        </tr>
    }
    </tbody>
</table>