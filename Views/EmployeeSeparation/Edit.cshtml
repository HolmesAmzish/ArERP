@model ArERP.Models.Entity.EmployeeSeparation

@{
    ViewData["Title"] = "Edit";
}

<h1>离职申请审批</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>申请人信息</h4>
        <table class="table">
            <tr>
                <th>离职日期</th><td>@Model.SeparationDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th>离职原因</th><td>@Model.SeparationReason</td>
            </tr>
        </table>
    </div>

    <div class="col-md-6">
        <h4>审批操作</h4>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Status" class="control-label">审批状态</label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">待处理</option>
                    <option value="Approved">批准</option>
                    <option value="Rejected">拒绝</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Approver" class="control-label">审批人</label>
                <input asp-for="Approver" class="form-control" />
                <span asp-validation-for="Approver" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApprovalNote" class="control-label">审批意见</label>
                <textarea asp-for="ApprovalNote" class="form-control"></textarea>
                <span asp-validation-for="ApprovalNote" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="提交审批" class="btn btn-primary"/>
                <a asp-action="Index">返回列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
