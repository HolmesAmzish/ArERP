@model ArERP.Models.Entity.EmployeeSeparation
@using ArERP.Helper

@{
    ViewData["Title"] = "离职申请审批";
}

<h2 class="mb-4">离职申请审批</h2>

<div class="row">
    <!-- 左侧：员工基本信息 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>员工信息</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">姓名</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.EmployeeName</dd>

                <dt class="col-sm-4">性别</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Gender</dd>

                <dt class="col-sm-4">邮箱</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Email</dd>

                <dt class="col-sm-4">职位</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Position</dd>

                <dt class="col-sm-4">薪资</dt>
                <dd class="col-sm-8">￥@Model.EmployeeInfo.Salary.ToString("N2")</dd>

                <dt class="col-sm-4">离职日期</dt>
                <dd class="col-sm-8">@Model.SeparationDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">离职原因</dt>
                <dd class="col-sm-8">@Model.SeparationReason</dd>
            </dl>
        </div>
    </div>

    <!-- 右侧：审批操作 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>审批操作</h4>
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmployeeId" />

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">审批状态</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Pending">待处理</option>
                        <option value="Approved">批准</option>
                        <option value="Rejected">拒绝</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Approver" class="form-label">审批人</label>
                    <input asp-for="Approver" class="form-control" />
                    <span asp-validation-for="Approver" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ApprovalNote" class="form-label">审批意见</label>
                    <textarea asp-for="ApprovalNote" class="form-control"></textarea>
                    <span asp-validation-for="ApprovalNote" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary me-2">提交审批</button>
                    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
