@model ArERP.Models.Entity.EmployeeSeparation
@using ArERP.Helper

@{
    ViewData["Title"] = "离职申请详情";
}

<h2 class="mb-4">离职申请详情</h2>

<div class="row">
    <!-- 左侧：员工基本信息 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>员工信息</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">姓名</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.EmployeeName</dd>

                <dt class="col-sm-4">性别</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Gender</dd>

                <dt class="col-sm-4">出生日期</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.BirthDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">邮箱</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Email</dd>

                <dt class="col-sm-4">手机</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Phone</dd>

                <dt class="col-sm-4">职位</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.Position</dd>

                <dt class="col-sm-4">入职时间</dt>
                <dd class="col-sm-8">@Model.EmployeeInfo.HireDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">薪资</dt>
                <dd class="col-sm-8">￥@Model.EmployeeInfo.Salary.ToString("N2")</dd>

                <dt class="col-sm-4">是否在职</dt>
                <dd class="col-sm-8">@(Model.EmployeeInfo.IsActive ? "在职" : "离职")</dd>
            </dl>
        </div>
    </div>

    <!-- 右侧：离职申请信息 -->
    <div class="col-md-6">
        <div class="card shadow-sm rounded p-3 mb-3">
            <h4>离职申请信息</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">离职日期</dt>
                <dd class="col-sm-8">@Model.SeparationDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">离职原因</dt>
                <dd class="col-sm-8">@Model.SeparationReason</dd>

                <dt class="col-sm-4">状态</dt>
                <dd class="col-sm-8">@Model.Status.GetDisplayName()</dd>

                <dt class="col-sm-4">审批人</dt>
                <dd class="col-sm-8">@Model.Approver</dd>

                <dt class="col-sm-4">审批意见</dt>
                <dd class="col-sm-8">@Model.ApprovalNote</dd>
            </dl>
        </div>
    </div>
</div>

<!-- 返回与编辑 -->
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">编辑</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
