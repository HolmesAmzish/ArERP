@model ArERP.Models.Entity.EmployeeSeparation
@using ArERP.Helper

@{
    ViewData["Title"] = "Details";
}

<h2>离职申请详情</h2>

<div>
    <h4>员工离职申请信息</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeInfo.EmployeeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeInfo.EmployeeName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeparationDate)
        </dt>
        <dd class="col-sm-10">
            @Model.SeparationDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeparationReason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeparationReason)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Model.Status.GetDisplayName()
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Approver)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApprovalNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApprovalNote)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">编辑</a> |
    <a asp-action="Index">返回列表</a>
</div>
