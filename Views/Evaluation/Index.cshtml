@model IEnumerable<ArERP.Models.Entity.EvaluationHeader>

@{
    ViewData["Title"] = "员工考核记录";
}

<h2>员工考核记录</h2>

<p>
    <a asp-action="Create">新增考核</a>
</p>

<form asp-action="Index" method="get">
    <div class="d-flex gap-4">
        <div class="form-group col-md-3">
            <label class="control-label">工号</label>
            <input type="text" name="employeeId" class="form-control" value="@ViewBag.EmployeeId" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">姓名</label>
            <input type="text" name="name" class="form-control" value="@ViewBag.Name" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label">部门</label>
            <input type="text" name="department" class="form-control" value="@ViewBag.Department" />
        </div>
        <div class="form-group col-md-3">
            <label class="control-label invisible">搜索</label>
            <button type="submit" class="btn btn-primary form-control">搜索</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>单据编号</th>
            <th>考核日期</th>
            <th>操作员</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DocumentNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.EvaluationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Operator)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">详情</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
