@model IEnumerable<ArERP.Areas.Inventory.Models.InventoryBalance>

@{
    ViewBag.Title = "title";
    Layout = "Panel";
}

<div>
    <h2>@ViewData["Title"]</h2>

    <table class="">
        <thead class="head-dark">
        <tr>
            <th>物品编号</th>
            <th>物品名称</th>
            <th>仓库</th>
            <th>位置</th>
            <th>库存数量</th>
            <th>单位</th>
            <th>最后更新</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Item.Code</td>
            <td>@item.Item.Name</td>
            <td>@item.Warehouse.Name</td>
            <td>@item.Warehouse.Location</td>
            <td>@item.Quantity.ToString("N2")</td>
            <td>@item.Item.Unit</td>
            <td>@item.LastUpdated.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
        }
        </tbody>
    </table>
</div>
