@model ArERP.Areas.HumanResource.Models.EvaluationHeader


@{
    ViewData["Title"] = "删除考核记录";
    Layout = "_Layout";
}

<h2>删除考核记录</h2>

<h3>确定要删除这条考核记录吗?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EvaluationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Operator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Operator)
        </dd>
    </dl>

    <h4>考核明细</h4>
    <table class="table">
        <thead>
            <tr>
                <th>员工</th>
                <th>工作表现分</th>
                <th>工作质量分</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.Details)
            {
                <tr>
                    <td>@(detail.Employee?.EmployeeName)</td>
                    <td>@Html.DisplayFor(modelItem => detail.PerformanceScore)</td>
                    <td>@Html.DisplayFor(modelItem => detail.QualityScore)</td>
                </tr>
            }
        </tbody>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="删除" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
    </form>
</div>
