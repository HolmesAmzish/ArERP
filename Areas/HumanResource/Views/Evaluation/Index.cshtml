@model IEnumerable<ArERP.Areas.HumanResource.Models.EvaluationHeader>

@{
    ViewData["Title"] = "员工考核记录";
    Layout = "Panel";
}

<h2 class="text-2xl font-semibold mb-4">员工考核记录</h2>

<div class="mb-4">
    <a asp-action="Create" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">新增考核</a>
</div>

<form asp-action="Index" method="get" class="mb-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">工号</label>
            <input type="text" name="employeeId" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" value="@ViewBag.EmployeeId" />
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">姓名</label>
            <input type="text" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" value="@ViewBag.Name" />
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">部门</label>
            <input type="text" name="department" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" value="@ViewBag.Department" />
        </div>
        <div class="flex items-end">
            <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">搜索</button>
        </div>
    </div>
</form>

<div class="overflow-x-auto">
    <table class="min-w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-100">
                <th class="border border-gray-300 px-4 py-2 text-left text-sm font-semibold text-gray-700">单据编号</th>
                <th class="border border-gray-300 px-4 py-2 text-left text-sm font-semibold text-gray-700">考核日期</th>
                <th class="border border-gray-300 px-4 py-2 text-left text-sm font-semibold text-gray-700">操作员</th>
                <th class="border border-gray-300 px-4 py-2 text-left text-sm font-semibold text-gray-700">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2">@Html.DisplayFor(modelItem => item.DocumentNumber)</td>
                    <td class="border border-gray-300 px-4 py-2">@Html.DisplayFor(modelItem => item.EvaluationDate)</td>
                    <td class="border border-gray-300 px-4 py-2">@Html.DisplayFor(modelItem => item.Operator)</td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:underline mr-2">详情</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:underline mr-2">编辑</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-blue-600 hover:underline">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
