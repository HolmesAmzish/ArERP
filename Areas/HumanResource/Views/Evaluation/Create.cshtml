@model ArERP.Areas.HumanResource.Models.EvaluationHeader

@{
    ViewData["Title"] = "新增考核记录";
    Layout = "Panel";
}

<h2 class="text-2xl font-bold mb-4">新增考核记录</h2>

<div class="max-w-4xl">
    <form asp-action="Create" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label asp-for="DocumentNumber" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="DocumentNumber" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="DocumentNumber" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="EvaluationDate" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="EvaluationDate" type="date" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="EvaluationDate" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Operator" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Operator" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Operator" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="Remarks" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Remarks" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
            <span asp-validation-for="Remarks" class="text-red-600 text-sm"></span>
        </div>

        <h4 class="text-lg font-semibold">考核明细</h4>
        <table class="min-w-full divide-y divide-gray-200" id="detailsTable">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">员工</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">工作表现分</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">工作质量分</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">备注</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @for (int i = 0; i < (Model.Details?.Count ?? 0); i++)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <select asp-for="Details[i].EmployeeId" asp-items="ViewBag.Employees" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                                <option value="">-- 选择员工 --</option>
                            </select>
                            <span asp-validation-for="Details[i].EmployeeId" class="text-red-600 text-sm"></span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <input asp-for="Details[i].PerformanceScore" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                            <span asp-validation-for="Details[i].PerformanceScore" class="text-red-600 text-sm"></span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <input asp-for="Details[i].QualityScore" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                            <span asp-validation-for="Details[i].QualityScore" class="text-red-600 text-sm"></span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <input asp-for="Details[i].DetailRemarks" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                            <span asp-validation-for="Details[i].DetailRemarks" class="text-red-600 text-sm"></span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <button type="button" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700" onclick="removeDetail(this)">删除</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-4 flex space-x-2">
            <button type="button" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" onclick="addDetail()">添加明细</button>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">保存</button>
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">返回列表</a>
        </div>
    </form>
</div>

<script>
    function addDetail() {
        const index = document.querySelectorAll('#detailsTable tbody tr').length;
        const html = `
            <tr class="bg-white divide-y divide-gray-200">
                <td class="px-6 py-4 whitespace-nowrap">
                    <select name="Details[${index}].EmployeeId" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- 选择员工 --</option>
                        @foreach (var item in ViewBag.Employees as SelectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap"><input name="Details[${index}].PerformanceScore" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" /></td>
                <td class="px-6 py-4 whitespace-nowrap"><input name="Details[${index}].QualityScore" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" /></td>
                <td class="px-6 py-4 whitespace-nowrap"><input name="Details[${index}].DetailRemarks" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" /></td>
                <td class="px-6 py-4 whitespace-nowrap"><button type="button" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700" onclick="removeDetail(this)">删除</button></td>
            </tr>`;
        document.querySelector('#detailsTable tbody').insertAdjacentHTML('beforeend', html);
    }

    function removeDetail(button) {
        const row = button.closest('tr');
        row.remove();
    }
</script>
