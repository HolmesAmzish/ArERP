@model ArERP.Areas.HumanResource.Models.EvaluationHeader

@{
    ViewData["Title"] = "考核记录详情";
}

<h1>考核记录详情</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EvaluationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Operator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Operator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>
</div>

<h4>考核明细</h4>
<table class="table">
    <thead>
        <tr>
            <th>员工</th>
            <th>工作表现分</th>
            <th>工作质量分</th>
            <th>合计</th>
            <th>备注</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.Details)
        {
            <tr>
                <td>@(detail.Employee?.EmployeeName)</td>
                <td>@Html.DisplayFor(modelItem => detail.PerformanceScore)</td>
                <td>@Html.DisplayFor(modelItem => detail.QualityScore)</td>
                <td>@Html.DisplayFor(modelItem => detail.TotalScore)</td>
                <td>@Html.DisplayFor(modelItem => detail.DetailRemarks)</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">编辑</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
