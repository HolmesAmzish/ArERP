@model ArERP.Areas.HumanResource.Models.EvaluationHeader

@{
    ViewData["Title"] = "考核记录详情";
    Layout = "Panel";
}

<h2 class="text-2xl font-bold mb-4">考核记录详情</h2>
<div class="max-w-md bg-white shadow-md rounded-lg p-6 mb-4">
    <h4 class="text-lg font-semibold mb-4">考核信息</h4>
    <div class="space-y-4">
        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.DocumentNumber)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.DocumentNumber)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.EvaluationDate)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.EvaluationDate)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Operator)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Operator)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Remarks)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Remarks)</div>
        </div>
    </div>
</div>

<h4 class="text-lg font-semibold mb-4">考核明细</h4>
<div class="overflow-x-auto">
    <table class="min-w-full">
        <thead>
            <tr class="bg-gray-100">
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">员工</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">工作表现分</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">工作质量分</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">合计</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">备注</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.Details)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2">@(detail.Employee?.EmployeeName)</td>
                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => detail.PerformanceScore)</td>
                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => detail.QualityScore)</td>
                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => detail.TotalScore)</td>
                    <td class="px-4 py-2">@Html.DisplayFor(modelItem => detail.DetailRemarks)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="text-blue-600 hover:underline mr-4">编辑</a>
    <a asp-action="Index" class="text-blue-600 hover:underline">返回列表</a>
</div>
