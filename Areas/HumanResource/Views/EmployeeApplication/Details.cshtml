@model ArERP.Areas.HumanResource.Models.EmployeeApplication
@using ArERP.Helper;

@{
    ViewData["Title"] = "Details";
    Layout = "Panel";
}

<h2 class="text-2xl font-bold mb-4">入职申请详情</h2>

<div class="max-w-md bg-white shadow-md rounded-lg p-6 mb-4">
    <h4 class="text-lg font-semibold mb-4">员工入职申请信息</h4>
    <div class="space-y-4">
        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Name)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Name)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Gender)</div>
            <div class="w-2/3">@(Model.Gender == "M" ? "男" : "女")</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.DateOfBirth)</div>
            <div class="w-2/3">@Model.DateOfBirth.ToString("yyyy-MM-dd")</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.NationalId)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.NationalId)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Phone)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Phone)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Email)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Email)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Department.DepartmentName)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Department.DepartmentName)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Status)</div>
            <div class="w-2/3">@Model.Status.GetDisplayName()</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.ApplicationDate)</div>
            <div class="w-2/3">@Model.ApplicationDate.ToString("yyyy-MM-dd HH:mm")</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Approver)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Approver)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.ApprovalDate)</div>
            <div class="w-2/3">@Model.ApprovalDate?.ToString("yyyy-MM-dd HH:mm")</div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">编辑</a> |
    <a asp-action="Index">返回列表</a>
</div>
