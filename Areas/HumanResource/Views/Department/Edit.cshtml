@model ArERP.Areas.HumanResource.Models.Department

@{
    ViewData["Title"] = "Edit";
    Layout = "Panel";
}

<h1 class="text-2xl font-bold mb-4">编辑部门</h1>

<h4 class="text-lg font-semibold mb-4">部门信息</h4>
<div class="max-w-md">
    <form asp-action="Edit" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="DepartmentName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="DepartmentName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="DepartmentName" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex items-center">
            <input asp-for="Deleted" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
            <label asp-for="Deleted" class="ml-2 block text-sm text-gray-900"></label>
        </div>
        <div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">保存</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>
