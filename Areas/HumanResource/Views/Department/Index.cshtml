@model IEnumerable<ArERP.Areas.HumanResource.Models.Department>

@{
    Layout = "Panel";
}
<div class="flex justify-between mb-4">
    <h2 class="text-2xl">部门列表</h2>
    <a asp-action="Create"
        class="inline-block bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600 transition">添加部门</a>
</div>

<div class="overflow-x-auto">
    <table class="min-w-full">
        <thead>
            <tr class="bg-gray-100">
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">部门编号</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">部门名称</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">创建日期</th>
                <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2">@item.Id</td>
                    <td class="px-4 py-2">@item.DepartmentName</td>
                    <td class="px-4 py-2">@item.CreationDate.ToString("yyyy-MM-dd")</td>
                    <td class="px-4 py-2">
                        <a asp-area="HumanResource" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"
                           class="text-blue-600 hover:underline">详情</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
