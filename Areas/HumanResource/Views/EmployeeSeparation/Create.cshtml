@model ArERP.Areas.HumanResource.Models.EmployeeSeparation

@{
    ViewData["Title"] = "Create";
    var employees = ViewBag.Employees as List<ArERP.Areas.HumanResource.Models.Employee>;
    Layout = "_Layout";
}

<h1>创建离职申请</h1>

<h4>员工离职申请</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">员工</label>
                <select asp-for="EmployeeId" class="form-control">
                    <option value="">请选择员工</option>
                    @foreach (var emp in employees)
                    {
                        <option value="@emp.Id">@emp.Id - @emp.EmployeeName</option>
                    }
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeparationDate" class="control-label"></label>
                <input asp-for="SeparationDate" type="date" class="form-control" />
                <span asp-validation-for="SeparationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeparationReason" class="control-label"></label>
                <textarea asp-for="SeparationReason" class="form-control"></textarea>
                <span asp-validation-for="SeparationReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
