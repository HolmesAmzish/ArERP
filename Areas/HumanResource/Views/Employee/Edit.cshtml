@model ArERP.Areas.HumanResource.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "Panel";
}

<h1 class="text-2xl font-bold mb-4">编辑</h1>

<h4 class="text-lg font-semibold mb-4">员工信息</h4>
<div class="max-w-md">
    <form asp-action="Edit" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="EmployeeName" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="EmployeeName" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="EmployeeName" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="BirthDate" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="BirthDate" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="BirthDate" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="DepartmentId" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="DepartmentId" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Position" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Position" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Position" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Gender" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Gender" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Gender" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Phone" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label asp-for="Salary" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Salary" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Salary" class="text-red-600 text-sm"></span>
        </div>
<div>
    <a asp-action="Details" asp-route-id="@Model.Id">返回详情</a>
</div>
    </form>
</div>
