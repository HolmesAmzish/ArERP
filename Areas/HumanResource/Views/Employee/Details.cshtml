@model ArERP.Areas.HumanResource.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "Panel";
}

<h2 class="text-2xl font-bold mb-4">详情</h2>
<div class="max-w-md bg-white shadow-md rounded-lg p-6 mb-4">
    <h4 class="text-lg font-semibold mb-4">员工信息</h4>
    <div class="space-y-4">
        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Code)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Code)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.EmployeeName)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.EmployeeName)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Gender)</div>
            <div class="w-2/3">@(Model.Gender == "M" ? "男" : "女")</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.BirthDate)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.BirthDate)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Email)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Email)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Phone)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Phone)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.HireDate)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.HireDate)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Department.DepartmentName)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Department.DepartmentName)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Position)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Position)</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.IsActive)</div>
            <div class="w-2/3">@(Model.IsActive ? "在职" : "离职")</div>
        </div>

        <div class="flex">
            <div class="w-1/3 font-medium">@Html.DisplayNameFor(model => model.Salary)</div>
            <div class="w-2/3">@Html.DisplayFor(model => model.Salary)</div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">编辑</a> |
    @* <a asp-action="Delete" asp-route-id="@Model?.Id">删除</a> | *@
    <a asp-action="Index">返回列表</a>
</div>
