@model IEnumerable<ArERP.Areas.Production.Models.Bom>

@{
    Layout = "Panel";
}

<div class="flex justify-between mb-4">
    <h2 class="text-2xl">BOM列表</h2>
    <a asp-action="Create"
       class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600 transition">新增BOM</a>
</div>

<div>
    <table class="min-w-full">
        <thead>
        <tr>
            <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">ID</th>
            <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">名称</th>
            <th class="border-b border-gray-300 px-4 py-2 text-left font-semibold">操作</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-2">@item.Id</td>
                <td class="px-4 py-2">@item.Name</td>
                <td class="px-4 py-2 space-x-2">
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="text-blue-600 hover:underline">详情</a>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="text-blue-600 hover:underline">编辑</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="text-red-600 hover:underline">删除</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
