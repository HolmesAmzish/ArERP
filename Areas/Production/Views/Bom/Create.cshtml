@model ArERP.Areas.Production.Models.Bom

@{
    Layout = "Panel";
    ViewData["Title"] = "创建BOM";
}

<div class="mb-4">
    <h2 class="text-2xl">创建BOM</h2>
</div>

<form asp-action="Create" class="bg-white rounded shadow p-4">
    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
    
    <div class="mb-4">
        <label asp-for="Name" class="block font-semibold mb-1"></label>
        <input asp-for="Name" class="w-full px-3 py-2 border rounded" />
        <span asp-validation-for="Name" class="text-red-500"></span>
    </div>

    <div class="flex justify-end space-x-2 mt-4">
        <a asp-action="Index" class="px-4 py-2 border rounded hover:bg-gray-100">取消</a>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">保存</button>
    </div>
</form>