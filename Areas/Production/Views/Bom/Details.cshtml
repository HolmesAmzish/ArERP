@model ArERP.Areas.Production.Models.Bom

@{
    Layout = "Panel";
    ViewData["Title"] = "BOM详情";
}

<div class="mb-4">
    <h2 class="text-2xl">BOM详情</h2>
</div>

<div class="bg-white rounded shadow p-4">
    <dl class="grid grid-cols-2 gap-4">
        <div class="col-span-2">
            <dt class="font-semibold">ID</dt>
            <dd class="mt-1">@Model.Id</dd>
        </div>
        <div>
            <dt class="font-semibold">名称</dt>
            <dd class="mt-1">@Model.Name</dd>
        </div>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-blue-600 hover:underline">返回列表</a>
</div>
